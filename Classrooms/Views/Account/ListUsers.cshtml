
@model IEnumerable<ApplicationUser>;

@{
    ViewData["Title"] = "User List";
}

<h2>Users List</h2>
@if (Model.Any()) { 
    foreach (var user in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    User: @user.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        @user.UserName
                    </h5>
                </div>
                    <div class="card-footer">
                        <form asp-action="DeleteUser" method="post" asp-route-id="@user.Id" >
                        <a asp-action="EditUser" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-outline-primary">Edit</a>
                        <button type="submit" class="btn btn-outline-danger">Delete</button>

                        </form>
                    </div>
            </div>
        }
}
else {
    <div class="card">
        <div class="card-header">
            No Users
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Create a new user
            </h5>
            <a class="btn btn-primary" asp-action="Register" asp-controller="Account">Create User</a>
        </div>


    </div>
}
